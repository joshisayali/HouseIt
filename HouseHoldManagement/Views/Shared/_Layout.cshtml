<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HouseIt", "SpentAmount", "Spent", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="active dropdown">
                        @*@Html.ActionLink("Expense", "SpentAmount", "Spent", new { @class = "dropdown-toggle", @data_toggle = "dropdown" })*@
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Daily Expenses<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Spent","SpentAmount", "Spent")</li>
                            <li>@Html.ActionLink("Earned", "EarnedAmount", "Earned")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Grocery", "SpentAmount", "Spent")</li>
                    <li>@Html.ActionLink("Travel", "SpentAmount", "Spent")</li>
                    <li>@Html.ActionLink("To Do", "SpentAmount", "Spent")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>